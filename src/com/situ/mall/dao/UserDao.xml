<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.situ.mall.dao.UserDao">
    <insert id="add" parameterType="User" >
		  insert into zhc (username,password) 
	    values (#{username},#{password})
	</insert>
	<select id="findByNameAndPassword" resultType="User">
			SELECT id,username,PASSWORD FROM zhc WHERE username=#{username} AND PASSWORD=#{password}
		</select> 
	
	</mapper>